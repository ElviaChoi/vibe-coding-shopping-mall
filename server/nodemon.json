{
  "watch": [
    ".",
    "config",
    "controllers",
    "models",
    "routes"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules",
    "uploads",
    "*.log",
    "*.test.js",
    "*.spec.js"
  ],
  "delay": 1000,
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  },
  "exec": "node server.js"
}
